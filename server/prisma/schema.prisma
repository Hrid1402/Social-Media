generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(cuid())
  username    String
  email       String
  description String?
  picture     String?
  followers   Follower[] @relation("Following")
  following   Follower[] @relation("Followers")
}

model Follower {
  createdAt       DateTime @default(now())
  followingUserId String
  followedUserId  String
  followedUser    User     @relation("Followers", fields: [followedUserId], references: [id])
  followingUser   User     @relation("Following", fields: [followingUserId], references: [id])

  @@id([followingUserId, followedUserId])
}
